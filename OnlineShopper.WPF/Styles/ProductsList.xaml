<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:OnlineShopper.WPF.Styles">

        <DataTemplate x:Key="ProductsDataTemplate">
            <StackPanel Orientation="Vertical">
                <Image Source="Product.png"/>
                <StackPanel Orientation="Horizontal">
                    <Label VerticalAlignment="Left" Content="Product Name :" />
                    <Label VerticalAlignment="Center" Content="{Binding ProductName}" />
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Label VerticalAlignment="Left" Content="Buy for cash :" />
                    <Label VerticalAlignment="Center" Content="{Binding BuyPrice}" />
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Label VerticalAlignment="Left" Content="Sell for cash :" />
                    <Label VerticalAlignment="Center" Content="{Binding SellPrice}" />
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Label VerticalAlignment="Left" Content="Sell for voucher :" />
                    <Label VerticalAlignment="Center" Content="{Binding VoucherPrice}" />
                </StackPanel>
            </StackPanel>
        </DataTemplate>
</ResourceDictionary>