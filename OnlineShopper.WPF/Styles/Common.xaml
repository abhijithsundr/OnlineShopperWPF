<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:OnlineShopper.WPF.Styles">
    
    <!-- Colors -->
    <Color x:Key="ColorPrimary">#006CFF</Color>
    <Color x:Key="ColorSecondary">#666666</Color>
    
    <!-- Brushes -->
    <SolidColorBrush x:Key="BrushPrimary" Color="{StaticResource ColorPrimary}"/>
    <SolidColorBrush x:Key="BrushSecondary" Color="{StaticResource ColorSecondary}"/>
</ResourceDictionary>