            <TextBox x:Name="txtSellPrice" />
            
            <Label>Voucher Price</Label>
            <TextBox x:Name="txtVoucherPrice" />
            
            <Label>Inventory</Label>
            <TextBox x:Name="txtInventory" />
            
            <Button Margin="0,5,0,0" Click="btnAdd_Click">
